{
  "identifier": "main-capability",
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "fs:default",
    "fs:allow-home-read-recursive",
    "fs:allow-home-write-recursive",
    "os:allow-os-type",
    "dialog:allow-open",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "node-version",
          "cmd": "node",
          "args": ["-v"],
          "sidecar": false
        }
      ]
    }
  ]
}
