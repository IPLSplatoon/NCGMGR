{
  "package": {
    "productName": "NCGMGR",
    "version": "0.7.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.inkfarer.ncgmgr",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Â© inkfarer (inkfarer@inkfarer.com)",
      "category": "Utility",
      "shortDescription": "NCGMGR",
      "longDescription": "Helps manage NodeCG installations.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": []
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true,
      "fs": {
        "scope": [
          "$HOME/**/*"
        ]
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "NCGMGR",
        "width": 600,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "titleBarStyle": "Transparent"
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}
